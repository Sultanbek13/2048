<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_game"
    >

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_2048"
        android:textSize="@dimen/text_size_2048"
        android:textColor="@color/app_color"
        android:fontFamily="@font/text_font_2048_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_standard"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim_planet_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintDimensionRatio="1:1"
        app:lottie_rawRes="@raw/lottie_anim_planet_3"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_anim_planets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lottie_rawRes="@raw/lottie_anim_planets"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />

    <ImageView
        android:id="@+id/iconGame"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_icon"
        android:src="@drawable/ic_play"
        android:padding="12dp"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:orientation="horizontal"
        android:padding="@dimen/margin_standard"
        >
        
        <ImageView
            android:id="@+id/iconSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_icon"
            android:padding="12dp"
            android:src="@drawable/ic_settings"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iconInfo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_info"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:background="@drawable/bg_icon"
            android:padding="12dp"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_share"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:background="@drawable/bg_icon"
            android:padding="12dp"
            android:layout_weight="1"
            />
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>